
<%= form_for @article do |f| %>
	<% if @article.errors.any? %>
		<h3><%= pluralize(@article.errors.count, 'error') %></h3>
		<ul>
			<% @article.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
			<% end %>
		</ul>
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %> 
	</p>
	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %> 
	</p>
	<p>
		<%= f.submit %> 
	</p>
<% end %>
